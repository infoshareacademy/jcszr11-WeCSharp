@model CalendarEvent
@using Schedulist.DAL.Models
@{
    ViewBag.Title = "AssignUser";
}

<h4 class="text-center" style="display:flex; justify-content:center; font-size: 30px">Calendar Event Creation</h4>
<hr />
<div class="row">
    <div class="col-md-12" style="text-align: center; display: flex; justify-content: center; gap: 10px">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CalendarEventName" class="control-label"></label>
                <input asp-for="CalendarEventName" class="form-control" />
                <span asp-validation-for="CalendarEventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalendarEventDescription" class="control-label"></label>
                <input asp-for="CalendarEventDescription" class="form-control" />
                <span asp-validation-for="CalendarEventDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalendarEventDate" class="control-label"></label>
                <input asp-for="CalendarEventDate" class="form-control" />
                <span asp-validation-for="CalendarEventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalendarEventStartTime" class="control-label"></label>
                <input asp-for="CalendarEventStartTime" class="form-control" />
                <span asp-validation-for="CalendarEventStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalendarEventEndTime" class="control-label"></label>
                <input asp-for="CalendarEventEndTime" class="form-control" />
                <span asp-validation-for="CalendarEventEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => Model.UserId, ViewBag.Users as SelectList, "Assigned to User", new { @class = "form-control" })
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div style="padding-top: 12px">
               
                <a asp-action="Index" class="form-button btn btn-dark shadow-none">Back to List</a>
            </div>
            </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}